@page "/dashboard"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize] // Alleen toegankelijk voor geauthenticeerde gebruikers.

<h1 class="dashboard-title">Welkom bij het VIVES Verhuur Dashboard</h1>

<div class="dashboard">
    <p>Gebruik de knoppen hieronder om toegang te krijgen tot de verschillende modules.</p>
    <div class="dashboard-buttons">
        <button class="action-button" @onclick="NavigateToProducts">Producten Beheren</button>
        <button class="action-button" @onclick="NavigateToArticles">Artikelen Beheren</button>
        <button class="action-button" @onclick="NavigateToOrders">Bestellingen Beheren</button>
        <button class="action-button" @onclick="NavigateToCustomers">Klanten Beheren</button>
    </div>
</div>

@code {
    private void NavigateToProducts() => NavigationManager.NavigateTo(AppRoutes.Products.Index);
    private void NavigateToArticles() => NavigationManager.NavigateTo(AppRoutes.Articles.Index);
    private void NavigateToOrders() => NavigationManager.NavigateTo(AppRoutes.Orders.Index);
    private void NavigateToCustomers() => NavigationManager.NavigateTo(AppRoutes.Customers.Index);

    [Inject] private NavigationManager NavigationManager { get; set; } = default!;
}
